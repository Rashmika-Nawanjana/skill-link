            color: #39424e;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: #5f6c80;
            margin-bottom: 2rem;
        }

        /* Footer */
        footer {
            background: #39424e;
            color: white;
            padding: 3rem 0 1rem;
        }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
