            color: #00b760;
        }

        .footer-section ul {
            list-style: none;
        }

        .footer-section ul li {
            margin-bottom: 0.5rem;
        }

        .footer-section ul li a {
            color: #a3a8af;
            text-decoration: none;
            transition: color 0.3s;
        }

        .footer-section ul li a:hover {
            color: #00b760;
        }

        .footer-section p {
            color: #a3a8af;
            line-height: 1.6;
        }

        .footer-bottom {
            border-top: 1px solid #525863;
            padding-top: 2rem;
            text-align: center;
            color: #a3a8af;
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }

            .search-filters {
                grid-template-columns: 1fr;
            }

            .mentors-grid {
                grid-template-columns: 1fr;
            }

            .mentor-stats {
                grid-template-columns: 1fr 1fr;
            }

            .results-header {
                flex-direction: column;
                gap: 1rem;
                align-items: stretch;
            }
        }
    </style>
</head>
