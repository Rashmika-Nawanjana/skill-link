                            <div class="step-features">
                                <div class="step-feature">
                                    <i class="fas fa-check"></i>
                                    <span>HD video quality</span>
                                </div>
                                <div class="step-feature">
                                    <i class="fas fa-check"></i>
                                    <span>Interactive tools</span>
                                </div>
                                <div class="step-feature">
                                    <i class="fas fa-check"></i>
                                    <span>Screen sharing</span>
                                </div>
