<!-- Learner Signup Page -->
<section class="auth-container">
    <div class="auth-card">
        <!-- Header -->
        <div class="auth-header">
            <h1 class="auth-title">Join SkillLink</h1>
            <p class="auth-subtitle">Start learning amazing skills today</p>
        </div>
        
        <!-- Signup Form -->
        <form action="/learners/signup" method="POST" class="form-container" style="background: transparent; padding: 0; box-shadow: none;">
            <div class="form-row">
                <div class="form-group">
                    <label for="firstName" class="form-label">First Name</label>
                    <input 
                        type="text" 
                        id="firstName" 
                        name="firstName" 
                        required 
                        class="form-input"
                        placeholder="John"
                    >
                </div>
                
                <div class="form-group">
                    <label for="lastName" class="form-label">Last Name</label>
                    <input 
                        type="text" 
                        id="lastName" 
                        name="lastName" 
                        required 
                        class="form-input"
                        placeholder="Doe"
                    >
                </div>
            </div>
            
            <div class="form-group">
                <label for="email" class="form-label">Email Address</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    class="form-input"
                    placeholder="john.doe@example.com"
                >
            </div>
            
            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required 
                    class="form-input"
                    placeholder="Create a strong password"
                    minlength="8"
                >
            </div>
            
            <div class="form-group">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    required 
                    class="form-input"
                    placeholder="Confirm your password"
                >
            </div>
            
            <div class="form-group">
                <label for="interests" class="form-label">What skills are you interested in?</label>
                <select name="interests" class="form-select">
                    <option value="">Select your main interest</option>
                    <option value="music">Music</option>
                    <option value="crafts">Arts & Crafts</option>
                    <option value="martial-arts">Martial Arts</option>
                    <option value="sports">Sports</option>
                    <option value="cultural">Cultural Arts</option>
                    <option value="lifestyle">Lifestyle</option>
                    <option value="technology">Technology</option>
                    <option value="language">Languages</option>
                    <option value="business">Business Skills</option>
                </select>
            </div>
            
            <div class="form-group">
                <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                    <input type="checkbox" name="newsletter" class="form-checkbox">
                    <span style="color: #62646a; font-size: 0.9rem;">
                        Send me updates about new mentors and special offers
                    </span>
                </label>
            </div>
            
            <div class="form-group">
                <label style="display: flex; align-items: flex-start; gap: 0.5rem; cursor: pointer;">
                    <input type="checkbox" name="terms" required class="form-checkbox" style="margin-top: 0.2rem;">
                    <span style="color: #62646a; font-size: 0.9rem; line-height: 1.4;">
                        I agree to the <a href="/terms" style="color: #1dbf73;">Terms of Service</a> and 
                        <a href="/privacy" style="color: #1dbf73;">Privacy Policy</a>
                    </span>
                </label>
            </div>
            
            <button type="submit" class="btn btn-primary w-full mb-2">Create Account</button>
        </form>
        
        <!-- Social Signup -->
        <div class="social-login">
            <div class="social-divider">
                <span>Or sign up with</span>
            </div>
            
            <div class="social-buttons">
                <button class="social-btn">
                    <span style="color: #4285f4; font-size: 1.2rem;">ðŸ“§</span>
                    Google
                </button>
                <button class="social-btn">
                    <span style="color: #1877f2; font-size: 1.2rem;">ðŸ“˜</span>
                    Facebook
                </button>
            </div>
        </div>
        
        <!-- Login Link -->
        <div class="auth-footer">
            <span style="color: #62646a;">Already have an account? </span>
            <a href="/learners/login" style="color: #1dbf73; text-decoration: none; font-weight: 600;">Sign in</a>
        </div>
    </div>
</section>
