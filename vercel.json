{
  "version": 2,
  "name": "skilllink",
  "builds": [
    { "src": "app.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(css|js|images)/(.*)", "dest": "/public/$1/$2" },
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "/app.js" }
  ],
  "env": { "NODE_ENV": "production" },
  "functions": { "app.js": { "maxDuration": 30, "memory": 512 } },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ],
  "redirects": [
    { "source": "/home", "destination": "/" },
    { "source": "/skills", "destination": "/categories" },
    { "source": "/teachers", "destination": "/mentors" },
    { "source": "/signup", "destination": "/learners/signup" },
    { "source": "/login", "destination": "/learners/login" }
  ],
  "regions": ["iad1"],
  "installCommand": "npm install",
  "devCommand": "npm run dev"
}